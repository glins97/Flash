#:import colors view.colors
#:import HistoryLayout controller.history.HistoryLayout
<FlasherScreen>: 
    question_label: question_label
    answer_label: answer_label
    canvas:
        Color:
            rgba: colors['grey_4']
        Rectangle:
            size: self.size
            pos: 0, 0

    Label:
        id: question_label
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.85, 0.85
        text_size: self.size
        valign: 'center'
        halign: 'center'
    Label:
        id: answer_label
        opacity: 0
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.85, 0.85
        text_size: self.size
        valign: 'center'
        halign: 'center'
    
    HistoryLayout:
        id: history_layout